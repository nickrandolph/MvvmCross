<?xml version="1.0" encoding="UTF-8"?>
<views:MvxShell xmlns="http://xamarin.com/schemas/2014/forms"
          xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       Route="mvx"
       xmlns:local="clr-namespace:Playground.Forms.UI.Pages"
       RouteHost="mvvmcross.com"
       RouteScheme="app"
       Title="MvvmCross Shell"
       x:Name="self"
       x:Class="Playground.Forms.UI.Shell">
  <FlyoutItem Title="Home">
    <ShellContent Route="home" ContentTemplate="{DataTemplate local:RootPage}" />
  </FlyoutItem>

  <FlyoutItem Title="Child">
    <ShellContent Route="child" ContentTemplate="{DataTemplate local:ChildPage}" />
  </FlyoutItem>
</views:MvxShell>